docker-cli ()
{
    EXIT_FAILURE=1

    [[ -z "$1" ]] && echo "USAGE: docker-cli <container_name>"; return ${EXIT_FAILURE}

    container_id=$(docker ps -q -f name=$1)

    if [[ -z "$container_id" ]]
    then
        echo "ERROR: Docker container $1 not found"
        return ${EXIT_FAILURE}
    else
        docker exec -it ${container_id} /bin/bash
    fi
}
